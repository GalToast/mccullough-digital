{
    "name": "mccullough-digital/service-card",
    "title": "Service Card",
    "category": "mcd-blocks",
    "icon": "star-filled",
    "description": "A single service card with an icon, title, text, and link.",
    "apiVersion": 2,
    "parent": [
        "mccullough-digital/services"
    ],
    "supports": {
        "html": false,
        "anchor": true,
        "reusable": true,
        "inserter": true,
        "spacing": {
            "margin": true,
            "padding": true
        },
        "color": {
            "background": true,
            "text": true,
            "gradients": true,
            "link": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "attributes": {
        "icon": {
            "type": "string",
            "default": ""
        },
        "title": {
            "type": "string",
            "default": "Service title"
        },
        "text": {
            "type": "string",
            "default": "Describe the value of this service here."
        },
        "linkText": {
            "type": "string",
            "default": "Learn More \u2192"
        },
        "linkUrl": {
            "type": "string",
            "default": ""
        }
    },
    "innerBlocks": {
        "allowedBlocks": [
            "core/group",
            "core/heading",
            "core/paragraph",
            "core/list",
            "core/html",
            "core/buttons",
            "core/button",
            "core/image"
        ],
        "templateLock": false,
        "template": [
            [
                "core/group",
                {
                    "className": "service-card__body"
                },
                [
                    [
                        "core/group",
                        {
                            "className": "icon"
                        }
                    ],
                    [
                        "core/heading",
                        {
                            "level": 3,
                            "placeholder": "Add service title…",
                            "content": "Service title"
                        }
                    ],
                    [
                        "core/paragraph",
                        {
                            "placeholder": "Describe the value of this service…",
                            "content": "Describe the value of this service here."
                        }
                    ]
                ]
            ],
            [
                "core/buttons",
                {
                    "className": "service-card__cta",
                    "layout": {
                        "type": "flex",
                        "justifyContent": "center"
                    }
                },
                [
                    [
                        "core/button",
                        {
                            "className": "learn-more",
                            "text": "Learn More \u2192"
                        }
                    ]
                ]
            ]
        ]
    },
    "editorScript": "file:../../build/blocks/service-card/editor.js",
    "textdomain": "mccullough-digital",
    "render": "file:./render.php"
}
