{
    "name": "mccullough-digital/service-card",
    "title": "Service Card",
    "category": "mcd-blocks",
    "icon": "star-filled",
    "description": "A single service card with an icon, title, text, and link.",
    "apiVersion": 2,
    "parent": [
        "mccullough-digital/services"
    ],
    "supports": {
        "html": false,
        "anchor": true,
        "reusable": true,
        "inserter": true,
        "spacing": {
            "margin": true,
            "padding": true
        },
        "color": {
            "background": true,
            "text": true,
            "gradients": true,
            "link": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "attributes": {
        "icon": {
            "type": "string",
            "default": ""
        },
        "title": {
            "type": "string",
