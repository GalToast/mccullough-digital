{
    "name": "mccullough-digital/about",
    "title": "About Section",
    "category": "mcd-blocks",
    "icon": "id",
    "description": "An about section with a title and a paragraph of text.",
    "keywords": [
        "about",
        "bio",
        "profile"
    ],
    "apiVersion": 2,
    "supports": {
        "html": false,
        "anchor": true,
        "align": [
            "wide",
            "full"
        ],
        "spacing": {
            "margin": true,
            "padding": true
        },
        "color": {
            "background": true,
            "text": true,
            "gradients": true,
            "link": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "attributes": {
        "headline": {
            "type": "string",
            "default": "Your Digital Partner from Day One"
        },
        "text": {
            "type": "string",
            "default": "McCullough Digital was founded to give new and growing businesses a powerful online voice. We integrate everything—from your website and social media to your Google Business Profile and ad campaigns—into one cohesive strategy for growth."
        }
    },
    "innerBlocks": {
        "allowedBlocks": [
            "core/heading",
            "core/paragraph",
            "core/list",
            "core/group",
            "core/image",
            "core/buttons",
            "core/button"
        ],
        "templateLock": false,
        "template": [
            [
                "core/heading",
                {
                    "level": 2,
                    "className": "section-title",
                    "placeholder": "Add about headline…",
                    "content": "Your Digital Partner from Day One"
                }
            ],
            [
                "core/paragraph",
                {
                    "placeholder": "Add about text…",
                    "content": "McCullough Digital was founded to give new and growing businesses a powerful online voice. We handle the complex digital world so you can focus on running your business."
                }
            ],
            [
                "core/paragraph",
                {
                    "placeholder": "Add founder introduction…",
                    "content": "As the founder, I bring a passion for technology and a deep understanding of what it takes to get noticed online. We're not just a service provider; we're your dedicated digital launchpad."
                }
            ],
            [
                "core/paragraph",
                {
                    "placeholder": "Add proof statement…",
                    "content": "We integrate everything—from your website and social media to your Google Business Profile and ad campaigns—into one cohesive strategy for growth."
                }
            ],
            [
                "core/buttons",
                {
                    "layout": {
                        "type": "flex",
                        "justifyContent": "left"
                    }
                },
                [
                    [
                        "core/button",
                        {
                            "className": "is-style-fill",
                            "text": "Learn Our Story",
                            "url": "/about/"
                        }
                    ]
                ]
            ]
        ]
    },
    "editorScript": "file:../../build/blocks/about/editor.js",
    "style": "file:./style.css",
    "textdomain": "mccullough-digital",
    "render": "file:./render.php"
}
