{
    "name": "mccullough-digital/hero",
    "title": "Hero Section",
    "category": "mcd-blocks",
    "icon": "superhero",
    "description": "A full-screen hero section with an animated background, headline, and call-to-action.",
    "keywords": [
        "hero",
        "header",
        "banner"
    ],
    "apiVersion": 2,
    "supports": {
        "html": false,
        "anchor": true,
        "align": [
            "wide",
            "full"
        ],
        "spacing": {
            "margin": true,
            "padding": true
        },
        "color": {
            "background": true,
            "text": true,
            "gradients": true,
            "link": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "attributes": {
        "headline": {
            "type": "string",
            "default": "Bringing Your Digital Vision to Life."
        },
        "subheading": {
            "type": "string",
            "default": "We build beautiful, high-performance web experiences and creative marketing strategies that connect with your audience. Ready to create something amazing?"
        },
        "buttonText": {
            "type": "string",
            "default": "Start a Project"
        },
        "buttonLink": {
            "type": "string",
            "default": ""
        }
    },
    "editorScript": "file:../../build/blocks/hero/editor.js",
    "viewScript": "file:./view.js",
    "style": "file:./style.css",
    "textdomain": "mccullough-digital",
    "render": "file:./render.php"
}
