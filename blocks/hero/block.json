{
    "name": "mccullough-digital/hero",
    "title": "Hero Section",
    "category": "mcd-blocks",
    "icon": "superhero",
    "description": "A full-screen hero section with an animated background, headline, and call-to-action.",
    "keywords": [
        "hero",
        "header",
        "banner"
    ],
    "apiVersion": 2,
    "supports": {
        "html": false,
        "anchor": true,
        "align": [
            "wide",
            "full"
        ],
        "spacing": {
            "margin": true,
            "padding": true
        },
        "color": {
            "background": true,
            "text": true,
            "gradients": true,
            "link": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "attributes": {
        "headline": {
            "type": "string",
            "default": "Bringing Your Digital Vision to Life."
        },
        "subheading": {
            "type": "string",
            "default": "We build beautiful, high-performance web experiences and creative marketing strategies that connect with your audience. Ready to create something amazing?"
        },
        "buttonText": {
            "type": "string",
            "default": "Start a Project"
        },
        "buttonLink": {
            "type": "string",
            "default": ""
        },
        "heroImageId": {
            "type": "number",
            "default": 0
        },
        "heroImageUrl": {
            "type": "string",
            "default": ""
        },
        "heroImageAlt": {
            "type": "string",
            "default": ""
        },
        "heroImageWidth": {
            "type": "number",
            "default": 0
        },
        "imagePosition": {
            "type": "string",
            "default": "bottom-right"
        },
        "imageSize": {
            "type": "number",
            "default": 40
        },
        "imageOpacity": {
            "type": "number",
            "default": 40
        },
        "imageVerticalOffset": {
            "type": "number",
            "default": 0
        },
        "imageHorizontalOffset": {
            "type": "number",
            "default": 0
        },
        "hideImageOnMobile": {
            "type": "boolean",
            "default": false
        },
        "contentAlignment": {
            "type": "string",
            "enum": [
                "top",
                "center",
                "bottom"
            ],
            "default": "center"
        },
        "contentOffset": {
            "type": "number",
            "default": 0,
            "minimum": -300,
            "maximum": 240
        }
    },
    "innerBlocks": {
        "allowedBlocks": [
            "core/heading",
            "core/paragraph",
            "core/list",
            "core/buttons",
            "core/group",
            "core/image",
            "core/media-text"
        ],
        "templateLock": false,
        "template": [
            [
                "core/heading",
                {
                    "level": 1,
                    "className": "hero__headline",
                    "placeholder": "Add hero headline…",
                    "content": "Bringing Your Digital Vision to Life."
                }
            ],
            [
                "core/paragraph",
                {
                    "placeholder": "Add supporting copy…",
                    "content": "We build beautiful, high-performance web experiences and creative marketing strategies that connect with your audience. Ready to create something amazing?"
                }
            ],
            [
                "core/buttons",
                {
                    "layout": {
                        "type": "flex",
                        "justifyContent": "center"
                    }
                },
                [
                    [
                        "core/button",
                        {
                            "className": "cta-button",
                            "text": "Start a Project"
                        }
                    ]
                ]
            ]
        ]
    },
    "editorScript": "file:../../build/blocks/hero/editor.js",
    "viewScript": "file:./view.js",
    "style": "file:./style.css",
    "textdomain": "mccullough-digital",
    "render": "file:./render.php"
}
