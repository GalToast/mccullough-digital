                }
            ],
            [
                "mccullough-digital/service-card"
            ],
            [
                "mccullough-digital/service-card"
            ],
            [
                "mccullough-digital/service-card"
            ]
        ]
    },
    "attributes": {
        "headline": {
            "type": "string",
            "default": "What We Do"
        }
    },
    "editorScript": "file:../../build/blocks/services/editor.js",
    "style": "file:./style.css",
    "textdomain": "mccullough-digital",
    "render": "file:./render.php"
